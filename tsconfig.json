{
  "include": ["src"],
  "exclude": ["node_modules", "src/tests"],
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "typeRoots": ["index.d.ts", "node_modules/@types"],
    "moduleResolution": "node"
  }
}
